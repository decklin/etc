	current = magenta bold
	local = cyan bold
	remote = blue bold
[color "diff"]
	commit = cyan bold
	meta = green bold
	old = red bold
	new = blue bold
	whitespace = magenta bold
	frag = yellow bold
[color "interactive"]
	prompt = blue bold
	header = magenta bold
	help = green bold
[color "status"]
	added = green bold
	changed = magenta bold
	untracked = cyan bold
[diff]
        noprefix = 1
[push]
	default = matching
[rerere]
	enabled = 1

