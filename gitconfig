[core]
	excludesfile = ~/.gitignore
[user]
	name = Decklin Foster
	email = decklin@red-bean.com
[alias]
	co = checkout
	cp = cherry-pick
	ci = commit
	ca = commit -a
	br = branch
	ba = branch -a
	ds = diff --patch-with-stat
	dc = diff --patch-with-stat --cached
      	lp = log --patch
	lo = log --pretty=format:'%C(magenta)%h%C(reset)%C(red)%d%C(reset) %s [%C(bold blue)%an%C(reset) %C(cyan)%ar%C(reset)]'
	lg = log --pretty=format:'%C(magenta)%h%C(reset)%C(red)%d%C(reset) %s [%C(bold blue)%an%C(reset) %C(cyan)%ar%C(reset)]' --graph
	la = log --pretty=format:'%C(magenta)%h%C(reset)%C(red)%d%C(reset) %s [%C(bold blue)%an%C(reset) %C(cyan)%ar%C(reset)] ' --graph --patch
	mn = merge --no-ff
	ff = merge --ff-only
	po = push origin
	ph = push origin HEAD
	st = status --short
	rb = rebase
	ro = !git rebase origin/$(git symbolic-ref -q HEAD | sed 's@refs/heads/@@')
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = auto
