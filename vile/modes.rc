~with define-submode txt
    fc=72
    paragraphs=^$
    sections=^[-=]\\+$
~endwith

~with define-submode py
    sw=4
~endwith

~with define-submode rb
    sw=2
~endwith

~with define-submode html
    mode-filename "\.erb$"
    sw=2
~endwith

~with define-submode make
    mode-pathname 'debian/rules'
    ts=8
    sw=8
    tabinsert
~endwith

~with define-submode js
    sw=4
~endwith

~with define-submode c
    sw=4
~endwith
