macro index,pager <F1> \
    "<shell-escape>less /usr/share/doc/mutt/manual.txt.gz\n"
macro index,pager y \
    "<change-folder>?<toggle-mailboxes>" # <sync-mailbox>
macro index,pager S \
    "<tag-prefix><save-message>="
macro index,pager,attach,compose \cb \
    "<pipe-message>mimedecode|urlview<Enter>" \
    "call urlview to extract URLs out of a message"
macro index,pager \ed "<pipe-entry>bogofilter -s\n\
    <save-message>=.Spam.false\n" \
    "delete as spam"
macro index,pager K "<pipe-entry>killthread\n\
    <delete-message>" \
    "kill this thread"

bind index,pager J noop
bind index,pager k previous-entry
bind index,pager j next-entry
bind index,pager <Up> previous-entry
bind index,pager <Down> next-entry
bind pager "b" previous-page
bind pager "B" bounce-message
bind pager "-" noop

